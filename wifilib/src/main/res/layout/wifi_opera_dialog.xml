<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_bg_icom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:id="@+id/opera_title_tv"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:id="@+id/opera_layout1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/opera_lianjie_tv"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="连接到网络"
            android:textColor="@color/textcolor2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/opera_calsave_tv"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="忽略此网络"
            android:textColor="@color/textcolor2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/opera_quxiao2_tv"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="取    消"
            android:textColor="@color/textcolor2"/>
    </LinearLayout>









    <LinearLayout
        android:id="@+id/opera_layout2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/textcolor2"
                android:text="信号强度："/>

            <TextView
                android:id="@+id/opera_level_tv"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/textcolor2"
                android:text="安全性："/>

            <TextView
                android:id="@+id/opera_anquan_tv"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"/>


        </LinearLayout>


        <TextView
            android:id="@+id/opera_hulie2_tv"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/textcolor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="忽略此网络"
            android:textColor="@color/white"/>



        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/opera_duankai_btn"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:shadowColor="@color/black"
                android:text="断开"
                android:elevation="1dip"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector"/>


            <Button
                android:id="@+id/opera_quxiao_btn"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:shadowColor="@color/black"
                android:text="取消"
                android:elevation="1dip"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector"/>


        </LinearLayout>

    </LinearLayout>







</LinearLayout>